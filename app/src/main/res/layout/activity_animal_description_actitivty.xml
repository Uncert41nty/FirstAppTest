<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnimalDescriptionActitivty"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/animalActivityIcon"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/animalActivityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Имя животного"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/animalActivityDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Описание этой твари"
        android:textSize="18sp"/>

</LinearLayout>